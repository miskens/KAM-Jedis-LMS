@{
    ViewBag.Title = "Home Page";

}

@if (!(User.Identity.IsAuthenticated))
{
    <div class="jumbotron">
        <h1>Lexicon LMS</h1>
        <p class="lead">Lexicon LMS - Av "Grupp KAM Jedis"</p>
        <p><a href="~/Account/Login" class="btn btn-primary btn-lg">Logga in</a></p>
    </div>
}
else
{
    <div class="row">

        <h2>Välkommen @Html.Raw(ViewBag.Fullname)</h2>

        @if (User.IsInRole("lärare"))
        {
            //Active groups listed for teachers in leftmost column
            <div class="col-md-4 active_groups">
                @if (ViewBag.HasActiveGroups)
                {
                    <div class="groupheader">
                        Aktuella grupper:
                    </div>
                    <br />

                    foreach (var group in ViewBag.ActiveGroups)
                    {
                        <div class="groupname">
                            @Html.ActionLink((string)group.Name, "Details", "Group", new { id = group.Id }, null)
                        </div>

                        <div class="groupdate">
                            @Html.Raw(group.StartDate.Date.ToString("d") + " -- " + group.EndDate.Date.ToString("d"))
                        </div>

                        int i = 0;
                        foreach (var course in ViewBag.Courses)
                        {
                            if (group.Id == course.GroupId)
                            {
                                if (i == 0)
                                {
                                    <div class="hascourses">
                                        <br />
                                        @Html.Raw("Ingående kurser:")
                                    </div>
                                    i++;
                                }

                                <div class="coursename">
                                    @Html.Raw(course.Name)
                                </div>

                                <div class="coursedate">
                                    @Html.Raw(course.StartDate.Date.ToString("d") + " -- " + course.EndDate.Date.ToString("d"))
                                </div>
                                <br />
                            }
                        }
                        <hr />
                    }
                }
            </div>

                // Future groups listed for teachers in middle column
                <div class="col-md-4 future_groups">

                    @if (ViewBag.HasFutureGroups)
                    {
                        <div class="groupheader">
                            Kommande grupper:
                        </div>
                        <br />
                        foreach (var group in ViewBag.FutureGroups)
                        {
                            <div class="groupname">
                                @Html.ActionLink((string)group.Name, "Details", "Group", new { id = group.Id }, null)
                            </div>

                            @Html.Raw(group.StartDate.Date.ToString("d") + " -- " + group.EndDate.Date.ToString("d"))

                            int i = 0;
                            foreach (var course in ViewBag.Courses)
                            {
                                if (group.Id == course.GroupId)
                                {
                                    if (i == 0)
                                    {
                                        <div class="hascourses">
                                            <br />
                                            @Html.Raw("Ingående kurser:")
                                        </div>
                                        i++;
                                    }

                                    <div class="coursename">
                                        @Html.Raw(course.Name)
                                    </div>

                                    <div class="coursedate">
                                        @Html.Raw(course.StartDate.Date.ToString("d") + " -- " + course.EndDate.Date.ToString("d"))
                                    </div>
                                    <br />
                                }
                            }
                            <hr />
                        }
                    }
                </div>

                    // Discontinued groups listed for teachers in rightmost column
                    <div class="col-md-4">
                        @if (ViewBag.HasFutureGroups)
                        {
                            <div class="groupheader">
                                Avslutade grupper:
                            </div>
                            <br />
                            foreach (var group in ViewBag.FinishedGroups)
                            {
                                <div class="groupname">
                                    @Html.ActionLink((string)group.Name, "Details", "Group", new { id = group.Id }, null)
                                </div>

                                <div class="groupdate">
                                    @Html.Raw(group.StartDate.Date.ToString("d") + " -- " + group.EndDate.Date.ToString("d"))
                                </div>

                                int i = 0;
                                foreach (var course in ViewBag.Courses)
                                {
                                    if (group.Id == course.GroupId)
                                    {
                                        if (i == 0)
                                        {
                                            <div class="hascourses">
                                                <br />
                                                @Html.Raw("Ingående kurser:")
                                            </div>
                                            i++;
                                        }

                                        <div class="coursename">
                                            @Html.Raw(course.Name)
                                        </div>

                                        <div class="coursedate">
                                            @Html.Raw(course.StartDate.Date.ToString("d") + " -- " + course.EndDate.Date.ToString("d"))
                                        </div>
                                        <br />
                                    }
                                }
                                <hr />
                            }
                        }
                    </div>
        }
        else
        {
            // Group student is in, listed along with courses and activities
            <div class="col-md-4">
                <h3>Grupp: @Html.Raw(ViewBag.Group)</h3>
                <h4>Start: @Html.Raw(ViewBag.GroupStart.ToString("d"))</h4>
                <h4>Slut: @Html.Raw(ViewBag.GroupStart.ToString("d"))</h4>
            </div>


            <div class="col-md-4">
                @if (ViewBag.HasActiveCourses)
                {
                    <table>
                        <thead>
                            <tr>
                                <th>Pågående kurser</th>
                                <th>Start</th>
                                <th>Slut</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in ViewBag.ActiveCourses)
                            {
                                <tr>
                                    <td>
                                        @Html.Raw(course.Name)
                                    </td>
                                    <td>
                                        @Html.Raw(course.StartDate.Date.ToString("d"))
                                    </td>
                                    <td>
                                        @Html.Raw(course.EndDate.Date.ToString("d"))
                                    </td>
                                </tr>


                                // Add activities here

                            }

                        </tbody>

                    </table>
                }


                @if (ViewBag.HasFutureCourses)
                {
                    <table>
                        <thead>
                            <tr>
                                <th>Framtida kurser</th>
                                <th>Start</th>
                                <th>Slut</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in ViewBag.FutureCourses)
                            {
                                <tr>
                                    <td>
                                        @Html.Raw(course.Name)
                                    </td>
                                    <td>
                                        @Html.Raw(course.StartDate.Date.ToString("d"))
                                    </td>
                                    <td>
                                        @Html.Raw(course.EndDate.Date.ToString("d"))
                                    </td>
                                </tr>

                                // Add activities here

                            }
                        </tbody>

                    </table>
                }
            </div>


            <div class="col-md-4">
                @if (ViewBag.HasFinishedCourses)
                {
                    <table>
                        <thead>
                            <tr>
                                <th>Avslutade kurser</th>
                                <th>Start</th>
                                <th>Slut</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in ViewBag.FinishedCourses)
                            {
                                <tr>
                                    <td>
                                        @Html.Raw(course.Name)
                                    </td>
                                    <td>
                                        @Html.Raw(course.StartDate.Date.ToString("d"))
                                    </td>
                                    <td>
                                        @Html.Raw(course.EndDate.Date.ToString("d"))
                                    </td>
                                </tr>

                                // Add activities here

                            }
                        </tbody>

                    </table>
                }
            </div>
        }

    </div>


}

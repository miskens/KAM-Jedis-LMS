@model IEnumerable<LexiconLMS.Models.Group>

@{
    ViewBag.Title = "TGroups";
}

<h2>Grupper:</h2>

<p>
    <a href="@Url.Action("Create", "Group")">
        <img src="@Url.Content("~/Content/Images/create.png")" style="width:25px; height:25px;" />
    </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        var shortDescription = "";
        if (item.Description.Length > 35)
        {
            shortDescription = item.Description.Substring(0, 35) + "...";
        }
        else
        {
            shortDescription = item.Description + "...";
        }
        <tr>
            <td>
                @Html.ActionLink((string)item.Name, "Details", "Group", new { id = item.Id, sender = "g"}, null)
            </td>
            <td>
                @Html.Raw(shortDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                <a href="@Url.Action("Delete", "Group", new {id = item.Id}, null)">
                    <img src="@Url.Content("~/Content/Images/delete.png")" style="width: 15px; height: 15px;" />
                </a>
            </td>
        </tr>
    }
</table>
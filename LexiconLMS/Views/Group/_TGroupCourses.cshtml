@using Microsoft.Ajax.Utilities
@model IEnumerable<LexiconLMS.Models.Course>

@{
    string sender = string.Empty;
    if (Request.RequestContext.RouteData.Values["sender"] != null)
    {
        sender = Request.RequestContext.RouteData.Values["sender"].ToString();
    }

    int groupId = 0;
    if (Request.RequestContext.RouteData.Values["id"] != null)
    {
        groupId = Int32.Parse(Request.RequestContext.RouteData.Values["id"].ToString());
    }
}
<p>
    @Html.ActionLink("Lägg till ny", "Create", "Courses", new {sender = "g", gId = groupId}, null)
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink((string)item.Name, "Details", "Courses", new { id = item.Id, sender = "g", gId = item.GroupId }, null)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.ActionLink("Ändra", "Edit", "Courses", new { id = item.Id, sender = "g", gId = item.GroupId }, null) |
            @Html.ActionLink("Ta bort", "Delete", "Courses", new { id = item.Id, sender = "g", gId = item.GroupId }, null)
        </td>
    </tr>
}

</table>
